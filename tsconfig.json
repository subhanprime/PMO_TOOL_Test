{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "es6"
        ],
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        // "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        // "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "__test__/**/*.ts"
    ]
}